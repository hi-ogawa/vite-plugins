{
  "name": "@hiogawa/vite-plugins-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm run --stream /^dev:/",
    "dev:demo": "pnpm -C packages/demo dev",
    "tsc": "tsc -b packages/*/tsconfig.json packages/*/examples/*/tsconfig.json examples/*/tsconfig.json",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "test": "pnpm -r --seq test run",
    "lint": "pnpm run --sequential /^lint:/",
    "lint-check": "pnpm run --sequential /^lint-check:/",
    "lint:isort": "pnpm lint-check:isort --fix",
    "lint-check:isort": "isort-ts --git --cache",
    "lint:prettier": "prettier -w --cache .",
    "lint-check:prettier": "prettier -c --cache ."
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@hiogawa/isort-ts": "^1.1.1",
    "@hiogawa/utils": "^1.6.0",
    "@playwright/test": "^1.36.2",
    "@tsconfig/strictest": "^2.0.1",
    "@types/node": "^18.16.18",
    "@vitejs/plugin-react": "^4.2.0",
    "esbuild": "^0.18.6",
    "prettier": "^2.8.8",
    "tsup": "^7.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "packageManager": "pnpm@8.12.1+sha256.28ca61ece5a496148b73fabc9afb820f9c3fec4f55f04ce45a2cea0a5219f2e1",
  "volta": {
    "node": "18.16.0"
  },
  "pnpm": {
    "overrides": {
      "miniflare": "3.20231218.2",
      "vite": "https://github.com/sapphi-red/vite-envs/raw/1df93407a0053bc838a8cf81753e48bfc912231a/vite-5.1.0-beta.2.tgz"
    }
  }
}
