{
  "name": "@hiogawa/vite-plugins-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r '--filter=!*example*' build",
    "changelog": "pnpm dlx @hiogawa/changelog --repo https://github.com/hi-ogawa/vite-plugins",
    "tsc": "tsc -b packages/*/tsconfig.json packages/*/examples/*/tsconfig.json",
    "tsc-dev": "pnpm tsc --watch --preserveWatchOutput",
    "test": "pnpm -r --sequential test run",
    "lint": "biome check --write .",
    "lint-check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@hiogawa/utils": "^1.7.0",
    "@playwright/test": "^1.45.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "esbuild": "^0.23.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.0.0",
    "react-server-dom-webpack": "^19.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.3",
    "vitest": "3.0.0-beta.1",
    "wrangler": "^3.79.0"
  },
  "packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4",
  "volta": {
    "node": "20.14.0"
  },
  "pnpm": {
    "overrides": {
      "vite": "$vite",
      "react": "$react",
      "react-dom": "$react-dom",
      "react-is": "$react-is",
      "react-server-dom-webpack": "$react-server-dom-webpack",
      "@types/react": "$@types/react",
      "@types/react-dom": "$@types/react-dom"
    }
  }
}
