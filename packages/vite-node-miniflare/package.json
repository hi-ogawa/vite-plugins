{
  "name": "@hiogawa/vite-node-miniflare",
  "version": "0.0.0-pre.5",
  "homepage": "https://github.com/hi-ogawa/vite-plugins/tree/main/packages/vite-node-miniflare",
  "repository": {
    "type": "git",
    "url": "https://github.com/hi-ogawa/vite-plugins",
    "directory": "packages/vite-node-miniflare"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client/worker-entry": {
      "types": "./dist/client/worker-entry.d.ts",
      "default": "./dist/client/worker-entry.js"
    },
    "./client/vite-node": {
      "types": "./dist/client/vite-node.d.ts",
      "default": "./dist/client/vite-node.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run /^build:/",
    "build:vite-node": "BUILD_STEP=0 tsup && BUILD_STEP=1 tsup",
    "build:pre-bundle": "tsup --config tsup.config.pre-bundle.ts",
    "dev": "cd demo && vite dev",
    "dev-react": "cd demo-react && vite dev",
    "test-e2e": "playwright test",
    "test-e2e-react": "E2E_COMMAND='pnpm dev-react' playwright test",
    "pre-bundle": "node --conditions browser ./dist/server/pre-bundle/cli.js react react/jsx-dev-runtime react-dom/server",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@hattip/adapter-node": "^0.0.34",
    "@hattip/compose": "^0.0.34",
    "esbuild": "^0.18.6",
    "miniflare": "^3.20231030.3",
    "vite-node": "^1.0.4"
  },
  "devDependencies": {
    "@hiogawa/tiny-react": "0.0.2-pre.5",
    "@hiogawa/tiny-rpc": "^0.2.3-pre.11",
    "@hiogawa/utils": "1.6.1-pre.10",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@vitejs/plugin-react": "^4.2.0",
    "pathe": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.4",
    "wrangler": "^3.19.0"
  },
  "peerDependencies": {
    "esbuild": "*",
    "miniflare": "*",
    "vite": "*"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    }
  }
}
