{
  "include": ["src", "e2e", "*.ts"],
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": [
      "vite/client",
      "react/experimental",
      "react-dom/experimental",
      "@types/mdx"
    ],
    "jsx": "react-jsx"
  }
}
