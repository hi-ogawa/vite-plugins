{
  "include": [
    "src",
    "e2e",
    "vite.config.ts",
    "uno.config.ts",
    "playwright.config.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "react/experimental", "react-dom/experimental"],
    "jsx": "react-jsx"
  }
}
