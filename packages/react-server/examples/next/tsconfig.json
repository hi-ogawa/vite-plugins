{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "paths": {
      "next": ["./node_modules/@hiogawa/react-server/dist/next/compat"],
      "next/*": ["./node_modules/@hiogawa/react-server/dist/next/compat/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "react/experimental"],
    "jsx": "react-jsx"
  }
}
